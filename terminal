# Useful stuff
alias ls="ls -la"
alias reload="source ~/.zshrc"
alias shuffle_first="ruby -e 'puts; puts STDIN.readlines.sample; puts'"

# Servers
alias cloud="ssh -p 420 dan@hellothisisdan.com"

# Toys
precmd() { cat ~/development/dankozlowski/dotfiles/fortunes.txt | shuffle_first }
alias fortunes="vim ~/development/dankozlowski/dotfiles/fortunes.txt"
